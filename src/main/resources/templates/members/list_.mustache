        function clearRight(){
            selectedMemberTitle.textContent='ì£¼ê°„ 10ë¶„ ë‹¨ìœ„ íƒ€ì„í…Œì´ë¸” (ì›”~ì¼)';
            tbodyWeek.innerHTML='';
