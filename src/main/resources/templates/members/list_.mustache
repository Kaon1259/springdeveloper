        // ë©¤ë²„ ë°ì´í„°
        let allMembers=[];
        try{ allMembers=JSON.parse(document.getElementById('membersData').textContent||'[]'); }catch(e){ allMembers=[]; }
        if(Array.isArray(allMembers)&&allMembers.length>0){ statusSelect.value=allMembers[0].status||'WORKING'; }

        // ===== ì´ˆê¸° í™œì„± ë·° ë³µì› =====
