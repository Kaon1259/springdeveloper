        function updatePreview() {
            const totalMin = computeWeeklyMinutesFromView();
            const wage = parseInt(String(hourlyWage.value || '0').replace(/,/g,''), 10) || 0;

            const hours = Math.floor(totalMin / 60);
            const mins  = totalMin % 60;
