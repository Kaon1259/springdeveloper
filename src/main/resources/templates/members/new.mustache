    // í•œêµ­ ì „í™”ë²ˆí˜¸ í¬ë§· í•¨ìˆ˜
    function formatKoreanPhone(value) {
        // ìˆ«ìë§Œ ì¶”ì¶œ
        let digits = String(value).replace(/\D/g, '');

        if (digits.length === 0) return '';

        // 02ë¡œ ì‹œì‘í•˜ëŠ” ê²½ìš°(ì„œìš¸)
        if (digits.startsWith('02')) {
            if (digits.length <= 2) {
                return digits;
            } else if (digits.length <= 5) {
                // 02-XXX
                return digits.slice(0, 2) + '-' + digits.slice(2);
            } else if (digits.length <= 9) {
                // 02-XXX-XXXX
                return digits.slice(0, 2) + '-' + digits.slice(2, digits.length - 4) + '-' + digits.slice(-4);
            } else {
                // 02-XXXX-XXXX (ìë¦¿ìˆ˜ ì´ˆê³¼ ì‹œ ì•ì„ ëŠ˜ë¦¬ê³  ë’¤ 4ìë¦¬ ê³ ì •)
                return digits.slice(0, 2) + '-' + digits.slice(2, digits.length - 4) + '-' + digits.slice(-4);
            }
        }

        // íœ´ëŒ€í° / ì¼ë°˜ 3ìë¦¬ êµ­ë²ˆ (010, 011, 031 ë“±)
        if (digits.length <= 3) {
            return digits;
        } else if (digits.length <= 7) {
            // 010-1234
            return digits.slice(0, 3) + '-' + digits.slice(3);
        } else if (digits.length <= 11) {
            // 010-1234-5678 ë˜ëŠ” 031-123-4567 ë“±
            return digits.slice(0, 3) + '-' + digits.slice(3, digits.length - 4) + '-' + digits.slice(-4);
        } else {
            // ë„ˆë¬´ ê¸´ ê²½ìš°ëŠ” ë’¤ 11ìë¦¬ë§Œ ì‚¬ìš©
            digits = digits.slice(-11);
            return digits.slice(0, 3) + '-' + digits.slice(3, 7) + '-' + digits.slice(7);
        }
    }
