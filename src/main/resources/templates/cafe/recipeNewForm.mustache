        })();

        /* =========================
           useBlender ìŠ¤ìœ„ì¹˜ ì´ˆê¸°ê°’ + ìƒíƒœí‘œì‹œ
           ========================= */
        const useBlenderToggle = document.getElementById('useBlender');
        const blenderStatusPill = document.getElementById('blender-status-pill');

        function refreshBlenderStatus() {
            if (!blenderStatusPill || !useBlenderToggle) return;
            const on = !!useBlenderToggle.checked;
            blenderStatusPill.textContent = on ? 'ON' : 'OFF';
            blenderStatusPill.classList.toggle('on', on);
        }

        (function initUseBlender() {
            if (!useBlenderToggle) return;
            useBlenderToggle.checked = parseTruth(form.dataset.useBlender);
            refreshBlenderStatus();
            useBlenderToggle.addEventListener('change', refreshBlenderStatus);
        })();

        /* =========================
           ë ˆì‹œí”¼ ë‹¨ê³„ (Step) ê´€ë¦¬
           ========================= */
        const stepsContainer = document.getElementById('steps-container');
        const addStepBtn = document.getElementById('btn-add-step');

        let stepIndex = 0;

        function createStepElement(index, content, timeVal) {
            const wrapper = document.createElement('div');
            wrapper.className = 'card mb-2';

            const initTime = (timeVal != null && String(timeVal).trim() !== '') ? String(timeVal).trim() : '10';

            wrapper.innerHTML = `
                <div class="card-body py-2">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-semibold d-flex align-items-center">
                            Step <span class="step-number ms-1">${index + 1}</span>
                            <div class="step-time-group">
                                <input type="number"
                                       class="form-control form-control-sm step-time-input"
                                       name="stepTimes"
                                       min="1"
                                       value="${initTime}">
                                <span class="step-time-label">ì´ˆ</span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-danger btn-remove-step">ì‚­ì œ</button>
                    </div>
                    <textarea class="form-control step-textarea" name="steps" rows="2" required>${content || ''}</textarea>
                </div>
            `;
            return wrapper;
        }

        function refreshStepNumbers() {
            const stepCards = stepsContainer.querySelectorAll('.card');
            stepCards.forEach((card, idx) => {
                const numberSpan = card.querySelector('.step-number');
                if (numberSpan) numberSpan.textContent = idx + 1;
            });
            stepIndex = stepCards.length;
        }

        function bindRemoveEvent(card) {
            const removeBtn = card.querySelector('.btn-remove-step');
            if (!removeBtn) return;

            removeBtn.addEventListener('click', function () {
                const total = stepsContainer.querySelectorAll('.card').length;
                if (total <= 1) {
                    alert('ìµœì†Œ 1ê°œ ì´ìƒì˜ ë‹¨ê³„ê°€ í•„ìš”í•©ë‹ˆë‹¤.');
                    return;
                }
                card.remove();
                refreshStepNumbers();
            });
        }

        function addStep(defaultContent, defaultTime) {
            const el = createStepElement(stepIndex, defaultContent, defaultTime);
            stepsContainer.appendChild(el);
            stepIndex++;
            bindRemoveEvent(el);
        }

        function resetStepsToOne() {
            stepsContainer.innerHTML = '';
            const first = createStepElement(0, '', '10');
            stepsContainer.appendChild(first);
            bindRemoveEvent(first);
            refreshStepNumbers();
        }

        (function initSteps() {
            const existingCards = stepsContainer.querySelectorAll('.card');
            existingCards.forEach(card => bindRemoveEvent(card));
            refreshStepNumbers();
        })();

        if (addStepBtn) addStepBtn.addEventListener('click', function () { addStep('', '10'); });

        /* =========================
           HOT / ICE & ì»µ ì‚¬ì´ì¦ˆ ì—°ë™ (ì‹ ê·œ ê¸°ë³¸ê°’ í¬í•¨)
           ========================= */
        const tempHot = document.getElementById('tempHot');
        const tempIce = document.getElementById('tempIce');

        const cup20 = document.getElementById('cup20');
        const cup24 = document.getElementById('cup24');
        const cup32 = document.getElementById('cup32');
        const cupL17 = document.getElementById('cupL17');
        const cupL20 = document.getElementById('cupL20');

        function setDefaultCupByTemp(temp) {
            if (temp === 'HOT') cup20.checked = true;
            else if (temp === 'ICE') cup24.checked = true;
        }

        if (tempHot) tempHot.addEventListener('change', function () { if (tempHot.checked) setDefaultCupByTemp('HOT'); });
        if (tempIce) tempIce.addEventListener('change', function () { if (tempIce.checked) setDefaultCupByTemp('ICE'); });

        function cupLabelByValue(v) {
            switch (v) {
                case 'OZ20': return '20oz';
                case 'OZ24': return '24oz';
                case 'OZ32': return '32oz';
                case 'L17':  return '1.7L';
                case 'L20':  return '2.0L';
                default: return v || '';
            }
        }

        function selectTemp(value) {
            if (value === 'HOT') tempHot.checked = true;
            else if (value === 'ICE') tempIce.checked = true;
        }
        function selectCup(value) {
            [cup20, cup24, cup32, cupL17, cupL20].forEach(r => { if (r) r.checked = false; });
            if (value === 'OZ20') cup20.checked = true;
            else if (value === 'OZ24') cup24.checked = true;
            else if (value === 'OZ32') cup32.checked = true;
            else if (value === 'L17') cupL17.checked = true;
            else if (value === 'L20') cupL20.checked = true;
        }

        function selectCategory(value) {
            const categoryInput = document.getElementById('category-input');
            const categoryGroup = document.getElementById('category-chip-group');
            if (!categoryInput || !categoryGroup) return;

            const chips = categoryGroup.querySelectorAll('.category-chip');
            chips.forEach(c => c.classList.remove('selected'));

            const found = Array.from(chips).find(c => c.dataset.value === value);
            if (found) {
                found.classList.add('selected');
                categoryInput.value = value;
            } else if (chips.length > 0) {
                chips[0].classList.add('selected');
                categoryInput.value = chips[0].dataset.value;
            }
        }

        (function initSelections() {
            // âœ… ì‹ ê·œ ê¸°ë³¸ê°’: ICE / OZ24
            tempIce.checked = true;
            cup24.checked = true;

            // âœ… ê¸°ë³¸ ì¹´í…Œê³ ë¦¬ ì„ íƒ
            const categoryInput = document.getElementById('category-input');
            const categoryGroup = document.getElementById('category-chip-group');
            if (!categoryInput || !categoryGroup) return;

            const initialCategory = (form.dataset.category || 'ICE_COFFEE').trim();
            const categoryChips = categoryGroup.querySelectorAll('.category-chip');

            categoryChips.forEach(chip => {
                chip.addEventListener('click', function () {
                    categoryChips.forEach(c => c.classList.remove('selected'));
                    chip.classList.add('selected');
                    categoryInput.value = chip.dataset.value;
                });

                if (chip.dataset.value === initialCategory) {
                    chip.classList.add('selected');
                    categoryInput.value = initialCategory;
                }
            });

            if (!categoryInput.value && categoryChips.length > 0) {
                categoryChips[0].classList.add('selected');
                categoryInput.value = categoryChips[0].dataset.value;
            }
        })();

        /* =========================
           âœ… í…œí”Œë¦¿ ëª¨ë‹¬: ë Œë” + ì„ íƒ ì ìš©
           ========================= */
        const templateBtn = document.getElementById('btn-open-template');
        const templateModalEl = document.getElementById('templateModal');
        const templateListEl = document.getElementById('template-list');
        const templateEmptyEl = document.getElementById('template-empty');
        const templateSearchEl = document.getElementById('template-search');
        const templateSearchClearBtn = document.getElementById('template-search-clear');

        let templateModalInstance = null;

        function openTemplateModal() {
            if (!templateModalEl) return;
            if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
                if (!templateModalInstance) templateModalInstance = new bootstrap.Modal(templateModalEl);
                templateModalInstance.show();
            } else {
                templateModalEl.style.display = 'block';
                templateModalEl.classList.add('show');
            }
        }
        function closeTemplateModal() {
            if (!templateModalEl) return;
            if (templateModalInstance) templateModalInstance.hide();
        }

        function templateToSearchText(t) {
            const parts = [
                safeStr(t.menuName),
                safeStr(t.author),
                safeStr(t.category),
                safeStr(t.temperature),
                safeStr(t.cupSize),
                safeStr(t.description)
            ];
            return parts.join(' ').toLowerCase();
        }

        function renderTemplates(filterText) {
            if (!templateListEl) return;
            templateListEl.innerHTML = '';

            const q = (filterText || '').trim().toLowerCase();
            const filtered = (templates || []).filter(t => {
                if (!q) return true;
                return templateToSearchText(t).includes(q);
            });

            if (templateEmptyEl) templateEmptyEl.style.display = (filtered.length === 0) ? 'block' : 'none';

            filtered.forEach((t, idx) => {
                const div = document.createElement('div');
                div.className = 'template-row';

                const name = safeStr(t.menuName) || `(ì´ë¦„ì—†ìŒ í…œí”Œë¦¿ ${idx+1})`;
                const author = safeStr(t.author);
                const cat = safeStr(t.category);
                const temp = safeStr(t.temperature);
                const cup = safeStr(t.cupSize);
                const blender = parseTruth(t.useBlender);

                const pills = [];
                if (temp) pills.push(`<span class="template-pill">${temp}</span>`);
                if (cup) pills.push(`<span class="template-pill">${cupLabelByValue(cup)}</span>`);
                if (cat) pills.push(`<span class="template-pill">${cat}</span>`);
                if (blender) pills.push(`<span class="template-pill" style="border-color:rgba(220,53,69,.35); color:#dc3545; background:rgba(220,53,69,.06);">ë¸”ë Œë”</span>`);

                div.innerHTML = `
                    <div class="d-flex justify-content-between align-items-start gap-3">
                        <div class="flex-grow-1" style="min-width:0;">
                            <div class="template-title text-truncate">${name}</div>
                            <div class="template-meta mt-1 text-truncate">
                                ${author ? `ì‘ì„±ì: ${author}` : 'ì‘ì„±ì ë¯¸ìƒ'}
                                ${t.description ? ` Â· ${safeStr(t.description)}` : ''}
                            </div>
                        </div>
                        <div class="d-flex flex-wrap justify-content-end" style="gap:0.35rem;">
                            ${pills.join('')}
                            <button type="button" class="btn btn-sm btn-primary ms-2">ë¶ˆëŸ¬ì˜¤ê¸°</button>
                        </div>
                    </div>
                `;

                div.addEventListener('click', function () {
                    applyTemplateToForm(t);
                    closeTemplateModal();
                });

                templateListEl.appendChild(div);
            });
        }

        function applyTemplateToForm(t) {
            const menuNameInput = document.getElementById('menuName');
            const authorInput = document.getElementById('author');
            const descInput = document.getElementById('description');
            const imgInput = document.getElementById('imgname');

            if (menuNameInput) menuNameInput.value = safeStr(t.menuName);
            if (authorInput) authorInput.value = safeStr(t.author);
            if (descInput) descInput.value = safeStr(t.description);
            if (imgInput) imgInput.value = safeStr(t.imgname);

            // ì˜¨ë„/ì»µ/ì¹´í…Œê³ ë¦¬/ë¸”ë Œë”
            if (t.temperature) selectTemp(safeStr(t.temperature).trim());
            if (t.cupSize) selectCup(safeStr(t.cupSize).trim());
            if (t.category) selectCategory(safeStr(t.category).trim());

            if (useBlenderToggle) {
                useBlenderToggle.checked = parseTruth(t.useBlender);
                refreshBlenderStatus();
            }

            // Steps/Times
            const steps = Array.isArray(t.steps) ? t.steps : [];
            const times = Array.isArray(t.stepTimes) ? t.stepTimes : [];

            resetStepsToOne();

            if (steps.length > 0) {
                const firstCard = stepsContainer.querySelector('.card');
                if (firstCard) {
                    const ta = firstCard.querySelector('.step-textarea');
                    const ti = firstCard.querySelector('.step-time-input');
                    if (ta) ta.value = safeStr(steps[0]);
                    if (ti) ti.value = (times[0] != null && String(times[0]).trim() !== '') ? String(times[0]).trim() : '10';
                }
                for (let i = 1; i < steps.length; i++) {
                    addStep(safeStr(steps[i]), (times[i] != null ? String(times[i]) : '10'));
                }
                refreshStepNumbers();
            }
        }

        if (templateBtn) {
            templateBtn.addEventListener('click', function () {
                renderTemplates(templateSearchEl ? templateSearchEl.value : '');
                openTemplateModal();
            });
        }
        if (templateSearchEl) {
            templateSearchEl.addEventListener('input', function () {
                renderTemplates(templateSearchEl.value);
            });
        }
        if (templateSearchClearBtn) {
            templateSearchClearBtn.addEventListener('click', function () {
                if (templateSearchEl) templateSearchEl.value = '';
                renderTemplates('');
            });
        }

        /* =========================
           ë ˆì‹œí”¼ ë¯¸ë¦¬ë³´ê¸° íŒì—… (ì›ë³¸ ê·¸ëŒ€ë¡œ)
           ========================= */
        const previewBtn = document.getElementById('btn-preview');
        const previewModalEl = document.getElementById('recipePreviewModal');

        let previewModalInstance = null;

        function openPreviewModal() {
            if (!previewModalEl) return;
            if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
                if (!previewModalInstance) previewModalInstance = new bootstrap.Modal(previewModalEl);
                previewModalInstance.show();
            } else {
                previewModalEl.style.display = 'block';
                previewModalEl.classList.add('show');
            }
        }

        function attachPreviewStepClickHandlers() {
            const container = document.getElementById('recipe-steps-content');
            if (!container) return;

            const steps = container.querySelectorAll('.recipe-step');
            steps.forEach(step => {
                step.addEventListener('click', () => {
                    steps.forEach(s => s.classList.remove('step-selected'));
                    step.classList.add('step-selected');
                });
            });
        }

        function buildPreview() {
            const menuNameInput = document.getElementById('menuName');
            const descInput = document.getElementById('description');
            const imgInput = document.getElementById('imgname');

            const selectedTemp = form.querySelector('input[name="temperature"]:checked');
            const selectedCup = form.querySelector('input[name="cupSize"]:checked');
            const selectedChip = document.querySelector('.category-chip.selected');

            const menuName = menuNameInput ? menuNameInput.value.trim() : '';
            const description = descInput ? descInput.value.trim() : '';
            const imgname = imgInput ? imgInput.value.trim() : '';

            const tempValue = selectedTemp ? selectedTemp.value : '';
            const cupValue = selectedCup ? selectedCup.value : '';
            const categoryLabel = selectedChip ? selectedChip.textContent.trim() : '';

            const previewMenuNameEl = document.getElementById('preview-menu-name');
            const previewDescriptionEl = document.getElementById('preview-description');
            const previewBasicInfoEl = document.getElementById('preview-basic-info');

            if (previewMenuNameEl) previewMenuNameEl.textContent = menuName || 'ë©”ë‰´ ì´ë¦„ ë¯¸ì…ë ¥';

            if (previewDescriptionEl) {
                const descLine = description || '';
                const imgLine = imgname ? ` (img: ${imgname})` : '';
                previewDescriptionEl.textContent = (descLine + imgLine).trim();
            }

            const infoParts = [];
            if (tempValue) infoParts.push(tempValue === 'HOT' ? 'HOT (í•«)' : 'ICE (ì•„ì´ìŠ¤)');
            if (cupValue) infoParts.push('ì»µ: ' + cupLabelByValue(cupValue));
            if (categoryLabel) infoParts.push('ì¹´í…Œê³ ë¦¬: ' + categoryLabel);
            if (useBlenderToggle) infoParts.push('ë¸”ë Œë”: ' + (useBlenderToggle.checked ? 'ON' : 'OFF'));

            if (previewBasicInfoEl) previewBasicInfoEl.textContent = infoParts.join(' Â· ');

            const previewStepsEl = document.getElementById('recipe-steps-content');
            if (!previewStepsEl) return;

            previewStepsEl.innerHTML = '';

            const stepCards = stepsContainer.querySelectorAll('.card');
            let visibleIndex = 0;

            stepCards.forEach((card) => {
                const textarea = card.querySelector('.step-textarea');
                if (!textarea) return;

                const text = (textarea.value || '').trim();
                if (!text) return;

                const timeInput = card.querySelector('.step-time-input');
                const timeVal = timeInput ? (timeInput.value || '').trim() : '';

                const row = document.createElement('div');
                row.className = 'recipe-step';

                const safeText = text.replace(/\n/g, '<br>');

                let timeHtml = '';
                if (timeVal) {
                    timeHtml = `<span class="step-time-preview ms-2 text-muted" style="font-size:2.0rem;">(${timeVal}ì´ˆ)</span>`;
                }

                row.innerHTML = `
                    <span class="step-index">Step ${visibleIndex + 1}.</span>
                    <span class="step-text">${safeText}</span>
                    ${timeHtml}
                `;

                previewStepsEl.appendChild(row);
                visibleIndex++;
            });

            if (visibleIndex === 0) {
                const emptyRow = document.createElement('div');
                emptyRow.className = 'recipe-step empty-step';
                emptyRow.innerHTML = `
                    <span class="step-index">Step 1.</span>
                    <span class="step-text text-muted">ë“±ë¡ëœ ë‹¨ê³„ê°€ ì—†ìŠµë‹ˆë‹¤. ë‹¨ê³„ ë‚´ìš©ì„ ì…ë ¥í•´ ì£¼ì„¸ìš”.</span>
                `;
                previewStepsEl.appendChild(emptyRow);
            }

            attachPreviewStepClickHandlers();

            const firstStep = previewStepsEl.querySelector('.recipe-step');
            if (firstStep) {
                previewStepsEl.querySelectorAll('.recipe-step').forEach(s => s.classList.remove('step-selected'));
                firstStep.classList.add('step-selected');
            }
        }

        if (previewBtn) {
            previewBtn.addEventListener('click', function () {
                buildPreview();
                openPreviewModal();
            });
        }
    })();
</script>

