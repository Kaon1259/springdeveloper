{{>layouts/header}}

<main class="container page-container center-page">
    <div class="form-box">
        <h2>✏️ 도서 수정하기</h2>

        <!-- article 객체가 넘어온다고 가정: articleId, articleTitle, articleAuthor, articleDescription -->
        <form class="container" action="/articles/{{article.articleId}}/update" method="post">
            <!-- 수정 시 ID 유지 -->
            <input type="hidden" name="articleId" value="{{article.articleId}}"/>

            <div class="mb-3">
                <label class="form-label">제목</label>
                <input class="form-input"
                       type="text"
                       name="articleTitle"
                       placeholder="제목을 입력하세요"
                       value="{{article.articleTitle}}">
            </div>

            <div class="mb-3">
                <label class="form-label">작가</label>
                <input class="form-input"
                       type="text"
                       name="articleAuthor"
                       placeholder="작가를 입력하세요"
                       value="{{article.articleAuthor}}">
            </div>

            <div class="mb-3">
                <label class="form-label">설명</label>
                <textarea class="form-control"
                          rows="3"
                          name="articleDescription"
                          placeholder="설명을 입력하세요">{{article.articleDescription}}</textarea>
            </div>

            <div style="display:flex; gap:10px;">
                <button type="submit" class="btn-submit">수정</button>
                <a href="/articles" class="btn btn-secondary" style="flex:1; text-align:center; padding:10px; border-radius:6px; background:#6c757d; color:#fff; text-decoration:none;">취소</a>
            </div>
        </form>
    </div>
</main>
{{>layouts/footer}}
