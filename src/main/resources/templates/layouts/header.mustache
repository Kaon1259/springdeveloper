<!-- ============================================================
     =============== JS: 활성 메뉴 처리 ===========================
     ============================================================ -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const path = window.location.pathname || '';

        // 1) 루트(/)로 들어온 경우 → 실시간현황으로 디폴트 이동
        if (path === '/' || path === '') {
            window.location.replace('/members/realtimedashboard');
            return;
        }

        const menuLinks = document.querySelectorAll('.main-menu-link');

        // 모든 메뉴 active 제거
        function clearActive() {
            menuLinks.forEach(link => link.classList.remove('active'));
        }

        // 현재 URL과 정확히 일치하는 메뉴에 active 부여
        clearActive();
        let matched = false;

        menuLinks.forEach(link => {
            const hrefPath = new URL(link.href, window.location.origin).pathname;
            if (hrefPath === path) {
                link.classList.add('active');
                matched = true;
            }
        });

        // 혹시 매칭되는 게 없으면, 실시간현황을 기본 active로
        if (!matched) {
            const realtime = document.getElementById('menu-realtime');
            if (realtime) {
                realtime.classList.add('active');
            }
        }

        // 클릭 시 포커스 제거(파란 포커스/테두리 방지)
        menuLinks.forEach(link => {
            link.addEventListener('click', function () {
                this.blur();
            });
        });
    });
</script>

